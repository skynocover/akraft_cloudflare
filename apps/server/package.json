{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:css && tsdown",
    "build:css": "pnpm exec tailwindcss -i ./src/styles/input.css -o ./public/styles.css --minify",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "pnpm run build:css && concurrently \"pnpm run dev:css\" \"wrangler dev\"",
    "dev:css": "pnpm exec tailwindcss -i ./src/styles/input.css -o ./public/styles.css --watch",
    "dev:remote": "wrangler dev --remote --env production"
  },
  "dependencies": {
    "@akraft-cloudflare/api": "workspace:*",
    "@akraft-cloudflare/auth": "workspace:*",
    "@akraft-cloudflare/db": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "better-auth": "catalog:",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "honox": "^0.1.52",
    "lucide-react": "^0.473.0",
    "tailwind-merge": "^3.4.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@akraft-cloudflare/config": "workspace:*",
    "@cloudflare/workers-types": "catalog:",
    "@tailwindcss/cli": "^4.0.15",
    "@types/node": "^22.13.11",
    "alchemy": "^0.81.1",
    "concurrently": "^9.1.2",
    "tailwindcss": "^4.0.15",
    "tsdown": "^0.16.5",
    "typescript": "catalog:",
    "wrangler": "^4.40.3"
  }
}
