{
    "name": "akraft-cloudflare",
    "compatibility_date": "2025-12-14",
    "main": "src/index.ts",
    "compatibility_flags": ["nodejs_compat"],
    "d1_databases": [
        {
            "binding": "DB",
            "database_name": "akraft-db",
            "database_id": "local",
            "migrations_dir": "../../packages/db/src/migrations"
        }
    ],
    "r2_buckets": [
        {
            "binding": "R2",
            "bucket_name": "akraft-images"
        }
    ],
    // 正式環境
    "env": {
        "production": {
            "d1_databases": [
                {
                    "binding": "DB",
                    "database_name": "akraft-db",
                    "database_id": "df003925-1564-4a34-9d1c-4327f75c1c5d",
                    "migrations_dir": "../../packages/db/src/migrations"
                }
            ],
            "r2_buckets": [
                {
                    "binding": "R2",
                    "bucket_name": "akraft-storage"
                }
            ]
        }
    },
    "observability": {
        "enabled": false,
        "head_sampling_rate": 1,
        "logs": {
            "enabled": true,
            "head_sampling_rate": 1,
            "persist": true,
            "invocation_logs": true
        },
        "traces": {
           "enabled": false,
            "persist": true,
            "head_sampling_rate": 1
        }
    }
}